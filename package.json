{
  "name": "finaldrop-backend",
  "version": "1.0.0",
  "description": "A NestJS project with Drizzle ORM and PostgreSQL, implementing authentication, multi-organization support, and role-based access control.",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:worker": "ts-node src/queue/worker.ts",
    "build": "nest build",
    "test": "jest",
    "test:e2e": "jest --config test/jest-e2e.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "migrate": "ts-node src/scripts/migration-run.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "drizzle:generate": "drizzle-kit generate --schema src/db/schema --out src/db/migrations",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/websockets": "^9.0.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^1.91.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.3.2",
    "nest-winston": "^1.9.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^27.5.2",
    "@types/joi": "^17.2.2",
    "@types/node": "^16.18.126",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.30.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.0"
  },
  "license": "MIT",
  "author": "Your Name",
  "private": true
}
