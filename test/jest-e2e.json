{
  "preset": "@shelf/jest-mongodb",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!**/node_modules/**"
  ],
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "setupFilesAfterEnv": ["<rootDir>/test/setupAfterEnv.ts"]
}